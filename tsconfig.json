{
    "compilerOptions": {
      "target": "ES2020", // Versão do JavaScript gerado
      "module": "commonjs", // Módulos compatíveis com Node.js
      "outDir": "./dist", // Pasta onde os arquivos .js compilados serão salvos
      "rootDir": "./src", // Pasta onde estarão os arquivos .ts
      "strict": true, // Ativa verificações rigorosas de tipo
      "esModuleInterop": true, // Facilita importações de módulos
      "skipLibCheck": true, // Acelera compilação
      "forceConsistentCasingInFileNames": true // Evita erros de case
    },
    "include": ["src/**/*"], // Inclui todos os arquivos .ts em src
    "exclude": ["node_modules"] // Exclui node_modules
  }
